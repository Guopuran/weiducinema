<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.my.activity.TicketRecordActivity">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_ticket"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
        <RadioButton
            android:layout_width="83dp"
            android:layout_height="23dp"
            android:button="@null"
            android:textColor="@color/select_more_text_bg"
            android:background="@drawable/select_more_but_bg"
            android:text="待付款"
            android:paddingLeft="27dp"
            android:id="@+id/my_waitpay_radio"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="32dp"
            android:textSize="14sp"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="83dp"
            android:layout_height="23dp"
            android:button="@null"
            android:text="已完成"
            android:paddingLeft="28dp"
            android:textColor="@color/select_more_text_bg"
            android:background="@drawable/select_more_but_bg"
            android:textSize="14sp"
            android:id="@+id/my_complete_radio"
            />
    </RadioGroup>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/my_ticket_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_ticket"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"/>
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        >
        <ImageView
            android:id="@+id/image_wu"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@mipmap/wu"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/name_wu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 暂无数据"
            android:layout_below="@id/image_wu"
            android:layout_alignLeft="@id/image_wu"
            android:layout_alignRight="@id/image_wu"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#b42c87"
            />
    </RelativeLayout>
</RelativeLayout>