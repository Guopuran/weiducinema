<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".details.DetailsActivity">
    <ImageView
        android:id="@+id/details_iamge_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#00ffffff"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:paddingTop="@dimen/dp_30"
        >
        <ImageView
            android:id="@+id/image_movie"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_movie_default"
            />
        <TextView
            android:id="@+id/details_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影详情"
            app:layout_constraintLeft_toRightOf="@id/image_movie"
            app:layout_constraintTop_toTopOf="@id/image_movie"
            app:layout_constraintBottom_toBottomOf="@id/image_movie"
            android:layout_marginLeft="6dp"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>