<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".login.activity.RegisterActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        >
        <com.xw.repo.XEditText
            android:id="@+id/reg_name"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_120"
            android:drawableLeft="@mipmap/register_icon_name_default"
            android:drawablePadding="@dimen/dp_18"
            android:hint="昵称"
            android:textColor="#eeeeee"
            android:textColorHint="#fff"
            app:x_disableClear="true"
            app:x_disableEmoji="true"
            android:textSize="@dimen/sp_16"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/reg_sex"
            android:layout_below="@id/reg_name"
            android:background="@mipmap/register_icon_sex_default"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reg_sex"
            android:layout_below="@id/reg_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"

            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_man"
                android:text="男"
                android:textSize="16sp"
                android:textColor="#ffff"
                android:button="@drawable/radio_button_style"
                android:layout_marginLeft="10dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_woman"
                android:text="女"
                android:textSize="16sp"
                android:textColor="#ffff"
                android:button="@drawable/radio_button_style"
                android:checked="true"
                android:layout_marginLeft="20dp"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/reg_date"
            android:layout_below="@id/reg_sex"
            android:layout_width="@dimen/dp_278"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_4"
            android:drawableLeft="@mipmap/register_icon_date_default"
            android:drawablePadding="@dimen/dp_16"
            android:hint="出生日期"
            android:textColor="#eeeeee"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_16"
            />
        <View
            android:background="#333333"
            android:layout_below="@id/reg_date"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_273"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/reg_phone"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_date"
            android:layout_marginTop="15dp"
            android:digits="0123456789"
            android:drawablePadding="@dimen/dp_24"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#eeeeee"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_16"
            android:drawableLeft="@mipmap/register_icon_phone_default"
            />
        <EditText
            android:id="@+id/reg_emil"
            android:layout_below="@id/reg_phone"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/register_icon_mail_default"
            android:drawablePadding="@dimen/dp_16"
            android:hint="邮箱"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz@."
            android:textColor="#eeeeee"
            android:textColorHint="#fff"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/sp_16"
            />

        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_emil"
            android:drawableLeft="@mipmap/register_icon_lock_default"
            android:drawablePadding="@dimen/dp_23"
            android:hint="登录密码"
            android:password="true"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz."
            android:textColor="#eeeeee"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_40"
            android:id="@+id/reg_but"
            android:background="@drawable/loaginregister_but_bg"
            android:layout_below="@id/reg_pass"
            android:layout_marginTop="@dimen/dp_80"
            android:text="注册"
            android:textSize="@dimen/sp_18"
            android:textColor="#ffffff"

            />
    </RelativeLayout>
</RelativeLayout>