<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_height="178dp">
    <View
        android:id="@+id/pay_xian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/pay_dialog_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:text="选择支付方式"
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        />
    <ImageView
        android:id="@+id/dialog_back"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:background="@mipmap/com_icon_down_default"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

        <ImageView
            android:id="@+id/image_weixin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pay_dialog_text_name"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/log_icon_weixin_default"
            />
        <TextView
            android:id="@+id/weixin_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weixin_name"
           app:layout_constraintLeft_toRightOf="@id/image_weixin"
            app:layout_constraintTop_toTopOf="@id/image_weixin"
            app:layout_constraintBottom_toBottomOf="@id/image_weixin"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/image_zhifubao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/image_weixin"
            android:src="@mipmap/pay_icon_zhifubao_default"
            />
        <TextView
            android:id="@+id/zhifubao_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhifubao_name"
            app:layout_constraintLeft_toRightOf="@id/image_zhifubao"
            app:layout_constraintTop_toTopOf="@id/image_zhifubao"
            app:layout_constraintBottom_toBottomOf="@id/image_zhifubao"
            android:layout_marginLeft="17dp"
            />
        <RadioGroup
            android:id="@+id/radio_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_weixin"
            app:layout_constraintBottom_toBottomOf="@id/image_zhifubao"
            android:layout_marginRight="18dp"
            >
            <RadioButton
                android:id="@+id/weixin_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/zhifubao_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    <TextView
        android:id="@+id/text_pay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pay_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="微信支付0.0元"
        android:gravity="center"
        />
</android.support.constraint.ConstraintLayout>