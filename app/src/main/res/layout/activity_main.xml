<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activity.MainActivity">
    <com.bw.movie.custom.CustomViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_mian_viewpager"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_mian_group"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/activity_main_but_movie"
            android:background="@drawable/group_select_movie"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:button="@null"
            android:background="@drawable/group_select_cinema"
            android:id="@+id/activity_main_but_cineam"
            android:layout_marginLeft="@dimen/dp_60"
            />
        <RadioButton
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/activity_main_but_my"
            android:background="@drawable/group_select_my"
            android:layout_marginLeft="@dimen/dp_60"
            android:button="@null"
            />
    </RadioGroup>

</RelativeLayout>