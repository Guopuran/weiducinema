<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="#00ffffff"
    android:layout_height="match_parent"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frag_radius"
        android:layout_marginTop="25dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >
        <TextView
        android:id="@+id/leixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="20dp"
        android:text="类型:"
        android:textSize="12sp"
        android:textColor="#333333"
        />
        <TextView
            android:id="@+id/detaols_dialog_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/leixing"
            android:layout_alignTop="@id/leixing"
            android:layout_alignBottom="@id/leixing"
            android:layout_marginLeft="5dp"
            android:text="ad"
            android:textSize="12sp"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/daoyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/leixing"
            android:layout_marginTop="10dp"
            android:layout_below="@id/leixing"
            android:text="导演:"
            android:textSize="12sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/detaols_dialog_text_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/daoyan"
            android:layout_alignTop="@id/daoyan"
            android:layout_alignBottom="@id/daoyan"
            android:layout_marginLeft="5dp"
            android:text="ad"
            android:textSize="12sp"
            android:textColor="#333333"
            />
        <TextView
        android:id="@+id/shichang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/leixing"
        android:layout_marginTop="10dp"
        android:layout_below="@id/daoyan"
        android:text="时长:"
        android:textSize="12sp"
        android:textColor="#333333"
        />
        <TextView
            android:id="@+id/detaols_dialog_text_timelong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shichang"
            android:layout_alignTop="@id/shichang"
            android:layout_alignBottom="@id/shichang"
            android:layout_marginLeft="5dp"
            android:text="ad"
            android:textSize="12sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/chandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/leixing"
            android:layout_marginTop="10dp"
            android:layout_below="@id/shichang"
            android:text="产地:"
            android:textSize="12sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/detaols_dialog_text_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/chandi"
            android:layout_alignTop="@id/chandi"
            android:layout_alignBottom="@id/chandi"
            android:layout_marginLeft="5dp"
            android:text="ad"
            android:textSize="12sp"
            android:textColor="#333333"
            />
        <ImageView
            android:id="@+id/dialog_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="-15dp"
            android:background="@mipmap/com_icon_down_default"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/details_dialog_image"
        android:layout_width="111dp"
        android:layout_height="149dp"
        android:background="@mipmap/beijing3"
        android:layout_marginLeft="24dp"
        />
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/details_dialog_image"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="#00ffffff"
        >
        <TextView
            android:id="@+id/jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="剧情简介"
            />
        <View
            android:id="@+id/xian1"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_below="@id/jianjie"
            android:background="@drawable/line"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:id="@+id/detaols_dialog_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xian1"
            android:layout_marginTop="10dp"
            android:maxLines="4"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/renyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="演职人员"
            android:layout_below="@id/detaols_dialog_text_content"
            />
        <View
            android:id="@+id/xian2"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_below="@id/renyuan"
            android:background="@drawable/line"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:id="@+id/renyuanmingzi"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_below="@id/xian2"
            android:background="@drawable/name"
            android:layout_marginTop="10dp"
            android:text="演员名字"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <View
            android:id="@+id/yi"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/shiyanrenwu"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_below="@id/xian2"
            android:background="@drawable/name"
            android:layout_marginTop="10dp"
            android:text="饰演人物"
            android:textSize="12sp"
            android:layout_toRightOf="@id/yi"
           android:layout_marginLeft="53dp"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/details_dialog_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/renyuanmingzi"
            android:layout_marginTop="12dp"
            ></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/xiahua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下滑查看更多"
            android:layout_below="@id/details_dialog_recy"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            />
    </RelativeLayout>

</RelativeLayout>