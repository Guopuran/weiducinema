<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="30dp"
    tools:context=".main.my.activity.MySystemMessageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/system_message_text"
        android:text="系统消息"
        android:textSize="14sp"
        android:textColor="#333333"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333333"
        android:id="@+id/system_message_unread"
        android:layout_toRightOf="@id/system_message_text"
        android:layout_marginLeft="10dp"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/system_message_text"
        android:layout_marginTop="20dp"
        android:id="@+id/system_message_recycler"
        >
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@mipmap/icon_my_default"
        android:id="@+id/system_message_back"
        />
</RelativeLayout>