<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.my.activity.MyFollowActivity">
      <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/group"
           android:orientation="horizontal"
          android:layout_marginTop="50dp"
          >
          <RadioButton
              android:layout_width="83dp"
              android:layout_height="23dp"
              android:button="@null"
              android:textColor="@color/select_more_text_bg"
              android:background="@drawable/select_more_but_bg"
              android:text="电影"
              android:paddingLeft="27dp"
              android:id="@+id/my_movie_follow"
              android:layout_marginLeft="90dp"
              android:layout_marginRight="32dp"
              android:textSize="14sp"
             android:checked="true"
              />
          <RadioButton
              android:layout_width="83dp"
              android:layout_height="23dp"
               android:button="@null"
              android:text="影院"
              android:paddingLeft="28dp"
              android:textColor="@color/select_more_text_bg"
              android:background="@drawable/select_more_but_bg"
              android:textSize="14sp"
              android:id="@+id/my_cinema_follow"
              />
      </RadioGroup>
      <com.jcodecraeer.xrecyclerview.XRecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@id/group"
          android:layout_marginTop="30dp"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:id="@+id/my_follow_xrecycle"
          >
      </com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>