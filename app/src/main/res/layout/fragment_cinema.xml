<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <Button
        android:layout_width="15dp"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/com_icon_loc_white_default"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="24dp"
        android:id="@+id/movie_location_but1"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:layout_toRightOf="@id/movie_location_but1"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_6"
        android:textColor="#333333"
        android:id="@+id/movie_location_text1"
        />
    <RelativeLayout
        android:id="@+id/movie_cinema_relative"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-160dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/movie_search_bg" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_search_image"
            android:src="@mipmap/com_icon_search_default"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_search_image"
            android:id="@+id/movie_search_edit"
            android:background="@null"
            android:hint="请输入查询内容"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:focusable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_search_text"
            android:textSize="12sp"
            android:text="搜索"
            android:layout_toRightOf="@id/movie_search_edit"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
     <RadioGroup
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_below="@+id/movie_cinema_relative"
         android:layout_marginTop="10dp"
         android:id="@+id/cinema_group"
         >
         <RadioButton
             android:id="@+id/cinema_recommend_but"
             android:layout_width="83dp"
             android:layout_height="25dp"
             android:button="@null"
             android:text="推荐影院"
             android:textSize="14sp"
             android:background="@drawable/select_more_but_bg"
             android:textColor="@color/select_more_text_bg"
             android:layout_marginLeft="100dp"
             android:paddingLeft="10dp"
             android:checked="true"
             />
         <RadioButton
             android:id="@+id/cinema_near_but"
             android:layout_width="83dp"
             android:layout_height="25dp"
             android:button="@null"
             android:text="附近影院"
             android:textSize="14sp"
             android:background="@drawable/select_more_but_bg"
             android:textColor="@color/select_more_text_bg"
             android:layout_marginLeft="32dp"
             android:paddingLeft="10dp"
             />
     </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/cinema_viewpager"
        android:layout_width="321dp"
        android:layout_height="match_parent"
        android:layout_below="@id/cinema_group"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        />
</RelativeLayout>