<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/xrecy_comment_cinema_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/xrecy_comment_cinema_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/xrecy_comment_cinema_image"
        app:layout_constraintTop_toTopOf="@id/xrecy_comment_cinema_image"
        app:layout_constraintBottom_toBottomOf="@id/xrecy_comment_cinema_image"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginLeft="10dp"
        android:text="姓名"
        />
    <TextView
        android:id="@+id/xrecy_comment_cinema_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/xrecy_comment_cinema_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="connect"
        />
    <TextView
        android:id="@+id/xrecy_comment_cinema_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/xrecy_comment_cinema_text_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="10dp"
        android:text="2019"
        />
    <TextView
        android:id="@+id/xrecy_comment_cinema_text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/xrecy_comment_cinema_text_time"
        android:text="0"
        android:textSize="12sp"
        android:textColor="#666666"
        />
    <ImageView
        android:id="@+id/xrecy_comment_cinema_image_num"
        android:layout_width="16sp"
        android:layout_height="16sp"
        app:layout_constraintRight_toLeftOf="@id/xrecy_comment_cinema_text_num"
        app:layout_constraintBottom_toBottomOf="@id/xrecy_comment_cinema_text_num"
        android:layout_marginRight="6dp"
        />
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xrecy_comment_cinema_text_time"
        android:layout_marginTop="10dp"
        android:background="#999999"
        />
</android.support.constraint.ConstraintLayout>